function [updated_hour, updated_min] = clockHands(curr_hour, curr_min, update)
    %Convert current time to minutes
    total_time = (curr_hour.*60) + curr_min;
    %do the update
    updated_time = total_time + update;
    %convert back to not-military time
    hours = floor(updated_time./60);
    minutes = mod(updated_time, 60);
    difference 
end